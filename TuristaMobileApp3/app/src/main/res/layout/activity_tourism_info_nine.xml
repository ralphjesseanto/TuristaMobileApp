<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tourism_info_nine">

    <RelativeLayout
        android:id="@+id/relativeLyt_ports"
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <VideoView
            android:id="@+id/video_ports"
            android:layout_width="match_parent"
            android:layout_height="800dp"/>

        <ImageButton
            android:id="@+id/img_btn_menu"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:contentDescription="@string/menu"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home_button"/>

        <ImageView
            android:id="@+id/image_turista_logo"
            android:layout_width="351dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="89dp"
            android:contentDescription="@string/logo_turista"
            android:src="@drawable/logo_turista"
            tools:ignore="ImageContrastCheck"/>

        <TextView
            android:id="@+id/textVw_ports"
            android:layout_width="352dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="399dp"
            android:background="#F9DBBB"
            android:fontFamily="sans-serif"
            android:padding="20dp"
            android:textAlignment="center"
            android:text="@string/transportations"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <GridLayout
            android:id="@+id/grid_ports"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="508dp"
            android:columnCount="1"
            android:rowCount="1">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchVw_transport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9DBBB"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_port"
                android:layout_width="352dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="#F9DBBB"/>
        </GridLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

