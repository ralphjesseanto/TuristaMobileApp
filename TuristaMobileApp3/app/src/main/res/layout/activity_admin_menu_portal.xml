<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_menu_portal">

    <VideoView
        android:id="@+id/video_admin_menu_portal"
        android:layout_width="match_parent"
        android:layout_height="732dp"/>

    <ImageView
        android:id="@+id/image_turista_logo"
        android:layout_width="351dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="76dp"
        android:contentDescription="@string/logo_turista"
        android:src="@drawable/logo_turista"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textVw_admin_menu"
        android:layout_width="352dp"
        android:layout_height="80dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="386dp"
        android:text="@string/admin_menu_portal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#F6BA6F"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedVw_admin_menu"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="474dp">

        <GridLayout
            android:id="@+id/grid_admin_menu"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:columnCount="1"
            android:rowCount="1">

            <Button
                android:id="@+id/btn_admin_list_of_tourist"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:backgroundTint="#F6BA6F"
                android:text="@string/list_of_tourist_registered"
                android:textColor="#546E7A"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btn_admin_logout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F6BA6F"
                android:text="@string/admin_log_out"
                android:textColor="#546E7A"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </GridLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
