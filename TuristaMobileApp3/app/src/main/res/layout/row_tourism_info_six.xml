<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#E21818">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVw_mall"
        android:layout_width="390dp"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="40dp"
        app:cardBackgroundColor="#E21818">

        <ImageView
            android:id="@+id/img_photo_mall"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/malls"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ImageContrastCheck" />

        <GridLayout
            android:id="@+id/grid_mall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:columnCount="1"
            android:rowCount="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mall_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:text="@string/mall_name"
                android:textSize="30sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/mall_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mall_address"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mall_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mall_contact_number"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mall_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mall_page_link"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mall_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_map"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/img_navigation_map"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/malls"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"
                android:text="@string/navigation_map"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>