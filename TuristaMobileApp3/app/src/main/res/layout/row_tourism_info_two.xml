<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#9CA777">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVw_resorts"
        android:layout_width="390dp"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="80dp"
        app:cardBackgroundColor="#9CA777">

        <ImageView
            android:id="@+id/img_photo_beach_resorts"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/beach_resorts"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ImageContrastCheck" />

        <GridLayout
            android:id="@+id/grid_resorts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:columnCount="1"
            android:rowCount="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resorts_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/resorts_name"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:textAlignment="center"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/resorts_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resort_address"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/resorts_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_number"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/resorts_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/resort_page_link"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/resorts_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_map"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/img_resorts_map"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/beach_resorts"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"
                android:text="@string/navigation_map"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>