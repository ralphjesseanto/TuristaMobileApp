<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F9DBBB">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVw_ports"
        android:layout_width="390dp"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="40dp"
        app:cardBackgroundColor="#F9DBBB">

        <ImageView
            android:id="@+id/img_photo_port"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/transportations"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ImageContrastCheck" />

        <GridLayout
            android:id="@+id/grid_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:columnCount="1"
            android:rowCount="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/port_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/port_name"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/port_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/port_address"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/port_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/port_contact_number"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/port_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_map"
                android:padding="10dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/img_navigation_map"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:contentDescription="@string/transportations"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>