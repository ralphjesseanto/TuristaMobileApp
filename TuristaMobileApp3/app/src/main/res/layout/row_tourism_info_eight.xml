<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#898121">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVw_bank"
        android:layout_width="390dp"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="40dp"
        app:cardBackgroundColor="#898121">

        <ImageView
            android:id="@+id/img_photo_bank"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/banks"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ImageContrastCheck" />

        <GridLayout
            android:id="@+id/grid_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:columnCount="1"
            android:rowCount="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:text="@string/bank_name"
                android:textSize="30sp"
                android:padding="10dp"/>


            <TextView
                android:id="@+id/bank_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_address"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bank_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_contact_number"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bank_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_page_link"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/img_bank_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_map"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/imgVw_bank_map"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:contentDescription="@string/navigation_map"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>