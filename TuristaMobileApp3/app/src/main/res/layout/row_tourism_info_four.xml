<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#CE5959">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVw_school"
        android:layout_width="390dp"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="40dp"
        app:cardBackgroundColor="#CE5959">

        <ImageView
            android:id="@+id/img_photo_school"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/schools"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ImageContrastCheck" />

        <GridLayout
            android:id="@+id/grid_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:columnCount="1"
            android:rowCount="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:text="@string/school_name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/school_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/school_address"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/school_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/school_contact_number"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/school_url_link_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/school_page_link_one"
                android:padding="10dp"
                android:textColorLink="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/school_url_link_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/school_page_link_two"
                android:textColorLink="@color/white"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/school_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_map"
                android:padding="10dp"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/img_navigation_map"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:contentDescription="@string/schools"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher"
                android:text="@string/navigation_map"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="ImageContrastCheck" />
        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>